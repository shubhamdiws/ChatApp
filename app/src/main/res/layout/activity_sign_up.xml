<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Sign_up">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/logos"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_Image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/profile"
           >
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:text=" Create Account"
            android:textColor="@color/primamry_colo"
            android:textSize="@dimen/_25sdp"
            android:fontFamily="@font/spartan_bold"></TextView>
        <EditText
            android:id="@+id/regis_name1"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/spartan_regular"
            android:hint="Enter Name"
            android:padding="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/black"></EditText>
        <EditText
            android:id="@+id/regis_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/spartan_regular"
            android:hint="Email address"
            android:padding="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/black"></EditText>
        <EditText
            android:id="@+id/regis_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/spartan_regular"
            android:hint="Password "
            android:padding="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/black"></EditText>
        <EditText
            android:id="@+id/regis_confpass22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"

            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/spartan_regular"
            android:hint="Confirm password"
            android:padding="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/black"></EditText>
        <Button
            android:id="@+id/btn_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_7sdp"
            android:clickable="true"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:fontFamily="@font/spartan_regular"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/didnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_35sdp"
                android:text="Alreday Account"
                android:textStyle="bold"
                android:fontFamily="@font/spartan_regular"
                android:textColor="@color/primamry_colo"
                android:textSize="@dimen/_15sdp"></TextView>
            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignIn"
                android:fontFamily="@font/spartan_regular"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textColor="@color/primamry_colo"
                android:textSize="@dimen/_15sdp"></TextView>


        </LinearLayout>





    </LinearLayout>






</RelativeLayout>