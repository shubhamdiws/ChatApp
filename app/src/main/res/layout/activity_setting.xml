<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="338dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_baseline_check_circle_24" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_Image"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_above="@+id/ReceieverName"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="149dp"
        android:layout_marginBottom="66dp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/purple_500"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/ReceieverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-7dp"
        android:layout_marginBottom="330dp"
        android:fontFamily="@font/spartan_bold"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Hey There I am \n Using WhatsApp"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"></TextView>


</RelativeLayout>