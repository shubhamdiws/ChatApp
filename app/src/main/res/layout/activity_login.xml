<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/logos"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/rlogo">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:text=" Login"
            android:textColor="@color/primamry_colo"
            android:textSize="@dimen/_25sdp"
            android:fontFamily="@font/spartan_bold"></TextView>
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logos"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Emaillogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/spartan_regular"
            android:hint="Email address"
            android:padding="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/black"></EditText>

        <EditText
            android:id="@+id/Passwordlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/spartan_regular"
            android:hint="password"
            android:padding="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/black"></EditText>

        <Button
            android:id="@+id/btn_signinlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button"
            android:fontFamily="@font/spartan_regular"
            android:padding="@dimen/_7sdp"
            android:text="Sign In"
            android:textColor="@color/white"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/didnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/spartan_regular"
                android:text="Didn't Sign in ?"
                android:textColor="@color/primamry_colo"
                android:textSize="@dimen/_15sdp"></TextView>

            <TextView
                android:id="@+id/registerlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/spartan_regular"
                android:text="Register Now"
                android:textColor="@color/primamry_colo"
                android:textSize="@dimen/_15sdp"></TextView>


        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
    

</RelativeLayout>